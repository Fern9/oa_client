

  <!-- 默认在底部 -->
  <view class="jh-tab-bar">
    <view class="jh-tab-item"  wx:for="{{ tabList }}" wx:for-item="tabItem" wx:for-index="index" wx:key="sTitle">
      <!-- 引入单个的tab -->
      <view class="jh-tab-content" data-key="{{ tabItem.sTitle }}">
        <!-- icon -->
        <view class="jh-tab-icon">
          <image src="{{ tabItem.sIconUrl }}"/>
        </view>
        <!-- 标题 -->
        <view class="jh-tab-title">
          <text>{{ tabItem.sTitle }}</text>
        </view>
        <!-- 右上角 红色数字 -->
        <view class="jh-tab-bubble" wx:if="{{ tabItem.iCount > 0}}">
          <text class="jh-tab-count">{{ count_show[index] }}</text>
        </view>
      </view>
    </view>
  </view>