<script>
  import wepy from 'wepy'
  import Tabbar from '../tests/tabbar'

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '首页'
    }
    components = {
      Tabbar: Tabbar
    }
    data = {
      userInfo: {
        nickName: '加载中1...'
      },
      tabList: [{
        sTitle: '我要报修',
        iCount: 0,
        sIconUrl: '../images/ic_assignment_black_24dp_2x.png'
      }, {
        sTitle: '我的',
        iCount: 0,
        sIconUrl: '../images/ic_account_circle_black_24dp_2x.png'
      }]
    }

    computed = {}

    methods = {}

    onLoad () {
      let self = this
      this.$parent.getUserInfo(function (userInfo) {
        console.log('ok')
        if (userInfo) {
          console.log(userInfo)
          self.userInfo = userInfo
          self.$apply()
          wepy.redirectTo({
            url: 'register?'
          })
          wepy.showToast({
            title: '成功',
            icon: 'success',
            duration: 2000
          })
        }
      })
    }
  }
</script>
