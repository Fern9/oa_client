      <view class="userinfo-nickname">{{ userInfo.nickName }}</view>
    </view>
    <view class="my_report">
      <button type="primary" bindtap="primary"> 我要报修 </button>
    </view>
  </view>

  <Tabbar :tabList="tabList"></Tabbar>
